@model Stock.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login/Signup Form</title>
        <link rel="stylesheet" href="SignUp_LogIn_Form.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    </head>

    <link href="~/css/signup_login_form.css" rel="stylesheet" />

    <body>
        <div class="container">
            @if (ViewBag.RegisterSuccess != null)
            {
                <div style="
                    text-align: center;
                    color: #28a745; /* Màu xanh lá cây */
                    background-color: #d4edda; 
                    border: 1px solid #c3e6cb;
                    padding: 10px;
                    border-radius: 5px;
                    margin-bottom: 20px;
                    font-weight: bold;
                    /* Đảm bảo div này không bị ẩn bởi CSS của form */
                    position: absolute;
                    top: 5%;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 80%;
                    z-index: 100;
                            ">
                    @ViewBag.RegisterSuccess
                </div>
            }
            <div class="form-box login">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <h1>Login</h1>
                    @if (ViewBag.LoginError != null)
                    {
                        <p style="color: red; text-align: center;">@ViewBag.LoginError</p>
                    }
                    <div class="input-box">
                        <input type="text" name="Username" placeholder="Username" required />
                        <i class='bx bxs-user'></i>
                    </div>
                    <div class="input-box">
                        <input type="password" name="Password" placeholder="Password" required />
                        <i class='bx bxs-lock-alt'></i>
                    </div>
                    <div class="forgot-link">
                        <a href="#">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn">Login</button>
                    <p>or login with social platforms</p>
                    <div class="social-icons">
                        <a href="#"><i class='bx bxl-google'></i></a>
                        <a href="#"><i class='bx bxl-facebook'></i></a>
                        <a href="#"><i class='bx bxl-github'></i></a>
                        <a href="#"><i class='bx bxl-linkedin'></i></a>
                    </div>
                </form>
            </div>

            <div class="form-box register">
                <form asp-controller="Account" asp-action="Register" method="post">
                    <h1>Registration</h1>

                    <div asp-validation-summary="ModelOnly" class="text-danger" style="color: red; margin-bottom: 10px;"></div>

                    <div class="input-box">
                        <input type="text" asp-for="FullName" placeholder="FullName" required />
                        <i class='bx bxs-envelope'></i>
                        <span asp-validation-for="FullName" class="text-danger" style="color: red;"></span>
                    </div>

                    <div class="input-box">
                        <input type="text" asp-for="Username" placeholder="Username" required />
                        <i class='bx bxs-user'></i>
                        <span asp-validation-for="Username" class="text-danger" style="color: red;"></span>
                    </div>

                    <div class="input-box">
                        <input type="password" asp-for="Password" placeholder="Password" required />
                        <i class='bx bxs-lock-alt'></i>
                        <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
                    </div>

                    <div class="input-box">
                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required />
                        <i class='bx bxs-lock-alt'></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger" style="color: red;"></span>
                    </div>

                    <button type="submit" class="btn">Register</button>
                    <p>or register with social platforms</p>
                    <div class="social-icons">
                        <a href="#"><i class='bx bxl-google'></i></a>
                        <a href="#"><i class='bx bxl-facebook'></i></a>
                        <a href="#"><i class='bx bxl-github'></i></a>
                        <a href="#"><i class='bx bxl-linkedin'></i></a>
                    </div>
                </form>
            </div>

            <div class="toggle-box">
                <div class="toggle-panel toggle-left">
                    <h1>Hello, Welcome!</h1>
                    <p>Don't have an account?</p>
                    <button class="btn register-btn">Register</button>
                </div>

                <div class="toggle-panel toggle-right">
                    <h1>Welcome Back!</h1>
                    <p>Already have an account?</p>
                    <button class="btn login-btn">Login</button>
                </div>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


        <script src="~/js/signup_login_form.js"></script>
    </body>
</html>