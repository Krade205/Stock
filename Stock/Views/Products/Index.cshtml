@model IEnumerable<Stock.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    var baseUrl = ViewBag.BaseUrl as string;
    bool isAdmin = User.IsInRole("Admin");
}

<link href="~/css/shopstyle.css" rel="stylesheet" />

<div class="text-center mb-4">
    <h2 class="fw-bold text-primary">DANH SÁCH SẢN PHẨM</h2>

    @if (isAdmin)
    {
        <div class="d-flex justify-content-center gap-3 mt-3">
            <a asp-action="Create"
               class="btn btn-success fw-bold">
                + THÊM SẢN PHẨM MỚI
            </a>
        </div>
    }
</div>


<div class="product-grid">
    @foreach (var item in Model)
    {
        // LOGIC MỚI: Mặc định dùng .png nếu không có đuôi
        string imgFileName = !string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : $"{item.Code}.png";

        // Đảm bảo đường dẫn ảnh đúng
        string imgPath = $"/images/{imgFileName}";

        <div class="product-card">
            @if (isAdmin)
            {
                <div class="admin-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon bg-warning" title="Sửa">✎</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon bg-danger" title="Xóa">✕</a>
                    <form asp-controller="Lcd"
                          asp-action="UpdateProductToLcd"
                          method="post"
                          style="display:inline;">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <button type="submit"
                                class="btn-icon bg-info"
                                title="Hiển thị LCD">
                            📟
                        </button>
                    </form>
                </div>
            }

            <img src="@imgPath" class="product-img" alt="@item.Name"
                 onerror="this.onerror=null; this.src='/images/anh.png';" />

            <div class="card-body">
                <div style="color:#666; font-size:12px;">Mã: @item.Code</div>
                <div class="product-title">@item.Name</div>
                <div class="product-price">
                    @(item.Price.HasValue ? item.Price.Value.ToString("N0") + " ₫" : "Liên hệ")
                </div>

                <a href="/Products/Details/@item.Id" class="btn btn-primary w-100 mt-2">Xem chi tiết</a>
            </div>
        </div>
    }
</div>