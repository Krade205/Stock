@model IEnumerable<Stock.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    var baseUrl = ViewBag.BaseUrl as string;
    bool isAdmin = User.IsInRole("Admin");
}

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }

    .product-card {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        position: relative;
    }

        .product-card:hover {
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
            transform: translateY(-3px);
        }

    .product-img {
        width: 100%;
        height: 200px;
        object-fit: contain;
        border-bottom: 1px solid #eee;
        padding: 10px;
    }

    .card-body {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 16px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
        height: 40px;
        overflow: hidden;
    }

    .product-price {
        color: #d32f2f;
        font-size: 18px;
        font-weight: bold;
        margin-top: auto;
    }

    .admin-actions {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        gap: 5px;
        z-index: 10;
    }

    .btn-icon {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: white;
        text-decoration: none;
        font-size: 14px;
    }
</style>

<div class="text-center mb-4">
    <h2 class="fw-bold text-primary">DANH SÁCH SẢN PHẨM</h2>
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-success fw-bold">+ THÊM SẢN PHẨM MỚI</a>
    }
</div>

<div class="product-grid">
    @foreach (var item in Model)
    {
        // LOGIC MỚI: Mặc định dùng .png nếu không có đuôi
        string imgFileName = !string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : $"{item.Code}.png";

        // Đảm bảo đường dẫn ảnh đúng
        string imgPath = $"/images/{imgFileName}";

        <div class="product-card">
            @if (isAdmin)
            {
                <div class="admin-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon bg-warning" title="Sửa">✎</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon bg-danger" title="Xóa">✕</a>
                </div>
            }

            <img src="@imgPath" class="product-img" alt="@item.Name"
                 onerror="this.onerror=null; this.src='/images/anh.png';" />

            <div class="card-body">
                <div style="color:#666; font-size:12px;">Mã: @item.Code</div>
                <div class="product-title">@item.Name</div>
                <div class="product-price">
                    @(item.Price.HasValue ? item.Price.Value.ToString("N0") + " ₫" : "Liên hệ")
                </div>

                <a href="/Products/Details/@item.Id" class="btn btn-primary w-100 mt-2">Xem chi tiết</a>
            </div>
        </div>
    }
</div>