@model Stock.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div style="max-width:600px; margin:30px auto; background:#fff; padding:30px; border-radius:15px; box-shadow:0 5px 15px rgba(0,0,0,0.1);">
    <h1 style="color:#007bff;">@Model.Name</h1>
    <hr />
    <p><strong>Mã SP:</strong> @Model.Code</p>
    <p style="color:#d32f2f; font-size:24px; font-weight:bold;">
        Giá: @(Model.Price.HasValue ? Model.Price.Value.ToString("N0") + " ₫" : "Liên hệ")
    </p>
    <p><strong>Số lượng tồn:</strong> @Model.Quantity</p>
    <p><strong>Mô tả:</strong></p>
    <div style="background:#f9f9f9; padding:15px; border-radius:8px;">
        @Model.Description
    </div>

    <a href="/Products/Index" style="display:block; margin-top:20px; text-align:center; font-weight:bold; text-decoration:none;">← Quay lại danh sách</a>
</div>