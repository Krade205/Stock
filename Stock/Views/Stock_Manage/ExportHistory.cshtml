@model IEnumerable<Stock.Models.StockTransaction>
@{
    ViewData["Title"] = "Lịch sử Xuất kho";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold text-uppercase">⬆️ LỊCH SỬ XUẤT KHO</h4>
            <a asp-action="Index" class="btn btn-light text-danger fw-bold btn-sm">Quay lại Dashboard</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="py-3 ps-4">Thời gian</th>
                            <th class="py-3">Mã SP</th>
                            <th class="py-3">Tên sản phẩm</th>
                            <th class="py-3 text-center">Số lượng</th>
                            <th class="py-3 text-end">Giá xuất</th>
                            <th class="py-3 text-center">Người thực hiện</th>
                            <th class="py-3">Ghi chú</th>
                            <!--<th class="py-3 text-center">Hành động</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">@item.ExportDateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold text-primary">@item.Product?.Code</td>
                                    <td class="fw-bold">@item.Product?.Name</td>

                                    <td class="text-center">
                                        <span class="badge bg-danger bg-opacity-10 text-danger fs-6 px-3">
                                            -@item.ExportQuantity @item.Unit
                                        </span>
                                    </td>

                                    <td class="text-end fw-bold text-secondary">
                                        @((item.ExportPrice ?? 0).ToString("#,##0")) đ
                                    </td>

                                    <td class="text-center text-primary fw-bold">
                                        @if (!string.IsNullOrEmpty(item.EmployeeName))
                                        {
                                            <span>👤 @item.EmployeeName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">---</span>
                                        }
                                    </td>

                                    <td class="text-muted small fst-italic">@item.Note</td>

                                    <!--<td class="text-center">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Xóa / Hoàn tác">
                                            🗑️
                                        </a>
                                    </td>-->
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    Currently no data available.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>