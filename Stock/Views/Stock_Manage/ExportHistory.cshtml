@model IEnumerable<Stock.Models.StockTransaction>
@{
    ViewData["Title"] = "Lịch sử Xuất kho";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-danger fw-bold">⬆️ LỊCH SỬ XUẤT KHO</h2>
        <div>
            <a asp-action="ReportExp" class="btn btn-danger fw-bold">- Xuất hàng/Hủy</a>
            <a asp-action="Index" class="btn btn-secondary">Xem tất cả</a>
        </div>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Danh sách phiếu xuất (Bán hàng/Hủy)</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0 text-center">
                <thead class="table-danger">
                    <tr>
                        <th>Ngày xuất</th>
                        <th class="text-start">Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá bán</th>
                        <th>Doanh thu</th>
                        <th>Tồn sau xuất</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.ExportDateTime?.ToString("dd/MM/yyyy HH:mm"))</td>
                            <td class="text-start fw-bold text-primary">@item.Product?.Name</td>

                            <td class="fw-bold text-danger fs-5">-@item.ExportQuantity</td>

                            <td>@item.ExportPrice?.ToString("N0") ₫</td>

                            <td class="fw-bold text-dark">
                                @((item.ExportQuantity * item.ExportPrice)?.ToString("N0")) ₫
                            </td>

                            <td>@item.StockRemaining</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>