<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stock Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stock.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Products" asp-action="Index">STOCK APP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- MENU BÊN TRÁI (CHỨC NĂNG CHÍNH) -->
                    <ul class="navbar-nav flex-grow-1">

                        <!-- 1. Sản phẩm -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Index">📦 Sản phẩm</a>
                        </li>

                        <!-- 2. POS (CHỈ ADMIN THẤY) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info fw-bold" asp-area="" asp-controller="Pos" asp-action="Index">💰 POS (Bán hàng)</a>
                            </li>
                        }


                        <!-- 3. QUẢN LÝ KHO (DROPDOWN - CHỈ ADMIN THẤY) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-success fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    🏭 Quản lý Kho
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Stock_Manage" asp-action="Index">📜 Xem tất cả</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-success" asp-controller="Stock_Manage" asp-action="ImportHistory">⬇️ Lịch sử Nhập</a></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Stock_Manage" asp-action="ExportHistory">⬆️ Lịch sử Xuất</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <!--  <li><a class="dropdown-item fw-bold" asp-controller="Stock_Manage" asp-action="Report">📝 Tạo phiếu mới</a></li>-->
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- MENU BÊN PHẢI (TÀI KHOẢN) -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link text-white">
                                    Xin chào, <b>@User.Identity.Name</b>
                                    <span class="badge bg-secondary ms-1">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </span>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-danger btn-sm" href="/Account/Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm fw-bold" href="/Account/Login">🔑 Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_Notification" />

        @if (User.IsInRole("Admin"))
        {
            <div class="alert alert-warning text-center py-1 mb-3 small shadow-sm">
                ⚠️ Bạn đang truy cập với quyền <b>Quản Trị Viên (Admin)</b>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3 text-center">
        <div class="container">
            &copy; 2025 - Stock App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>