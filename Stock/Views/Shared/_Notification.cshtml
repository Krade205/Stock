@if (TempData["Success"] != null)
{
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert" id="auto-close-alert">
            <strong>🎉 Thành công!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

@if (TempData["Error"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert" id="auto-close-alert">
            <strong>⚠️ Thất bại!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<script>
    setTimeout(function () {
        var alertNode = document.getElementById('auto-close-alert');
        if (alertNode) {
            var alert = new bootstrap.Alert(alertNode);
            alert.close();
        }
    }, 3000); // 3000ms = 3 giây
</script>